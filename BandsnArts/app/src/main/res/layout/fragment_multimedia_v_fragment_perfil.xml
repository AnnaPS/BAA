<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multimedia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="46dp"
                android:text="Muestra tu talento con tu mejor canción"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />

            <android.support.v7.widget.CardView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/md_grey_300">



                    <android.support.v7.widget.CardView
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        app:cardBackgroundColor="@color/md_green_200">


                        <SeekBar
                            android:id="@+id/progresoMusicaVMultimedia"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:progressBackgroundTint="@color/md_red_400"

                            />

                        <TextView
                            android:id="@+id/tiempoTranscurridoVMultimedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="50dp"
                            android:text="00:00"
                            android:textColor="@color/md_white_1000" />

                        <TextView
                            android:id="@+id/tiempoRestanteVMultimedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="50dp"
                            android:text="-4:00"
                            android:textColor="@color/md_white_1000" />


                        <Button
                            android:id="@+id/btnPlayVMultimedia"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/play"
                            android:backgroundTint="@color/md_black_1000" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="120dp"
                                android:src="@drawable/sound" />

                            <SeekBar
                                android:id="@+id/volumenVMultimedia"
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="120dp"
                                android:progress="50"
                                android:layout_marginBottom="10dp"

                                />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="18dp"
                                android:layout_marginTop="120dp"
                                android:src="@drawable/sound2" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="205dp"

                    android:background="@color/md_teal_800" />

                <Button
                    android:id="@+id/btnAnadirVMultimedia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="275dp"
                    android:layout_marginTop="210dp"
                    android:background="@drawable/fab_add"
                    android:backgroundTint="@color/md_light_green_600" />

                <Button
                    android:id="@+id/btnEliminarVMultimedia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="210dp"
                    android:background="@android:drawable/ic_delete"
                    android:backgroundTint="@color/md_red_400"
                    android:enabled="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="220dp"
                    android:text="* No se pueden superar los 5MB"
                    android:textStyle="italic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="255dp"
                    android:background="@color/md_teal_800"
                    android:layout_marginBottom="10dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¡Comparte tus redes sociales!"
                android:textSize="16sp"
                android:textStyle="italic" />


            <android.support.v7.widget.CardView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/md_grey_300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/youtube" />

                    <EditText
                        android:id="@+id/edtYoutubeVMultimedia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  PERFIL YOUTUBE"
                        android:textColor="@color/md_teal_800"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                    <Button
                        android:id="@+id/btnEditarYoutubeVMultimedia"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/md_teal_800"
                        android:background="@drawable/ic_border_color_black_24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="65dp"
                        android:src="@drawable/com_facebook_button_icon_blue" />


                    <EditText
                        android:id="@+id/edtFacebookVMultimedia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:text="  PERFIL FACEBOOK"
                        android:enabled="false"
                        android:textColor="@color/md_teal_800"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                    <Button
                        android:id="@+id/btnEditarFacebookVMultimedia"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="65dp"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="@color/md_teal_800"
                        android:background="@drawable/ic_border_color_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="115dp"
                    android:src="@drawable/instagram" />
                    <EditText
                        android:id="@+id/edtInstagramVMultimedia"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="115dp"
                        android:enabled="false"
                        android:text="  PERFIL INSTAGRAM"
                        android:textColor="@color/md_teal_800"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnEditarInstagramVMultimedia"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginTop="115dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_border_color_black_24dp"
                        android:backgroundTint="@color/md_teal_800"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>