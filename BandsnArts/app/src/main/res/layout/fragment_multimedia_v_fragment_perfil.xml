<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multimedia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="46dp"
                android:text="Muestra tu talento con tu mejor canciÃ³n"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />

            <android.support.v7.widget.CardView
                android:layout_width="340dp"
                android:layout_height="480dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/md_grey_300">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="TITULO CANCION"
                    android:textColor="@color/md_teal_800"
                    android:textSize="20dp"
                    android:textStyle="italic|bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="310dp"
                        android:layout_height="370dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="50dp"
                        app:cardBackgroundColor="@color/md_green_200">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/image" />

                        <SeekBar
                            android:id="@+id/progresoMusicaVMultimedia"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="180dp"
                            android:progressBackgroundTint="@color/md_red_400"

                            />

                        <TextView
                            android:id="@+id/tiempoTranscurridoVMultimedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="200dp"
                            android:text="00:00"
                            android:textColor="@color/md_white_1000" />

                        <TextView
                            android:id="@+id/tiempoRestanteVMultimedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="200dp"
                            android:text="-4:00"
                            android:textColor="@color/md_white_1000" />


                        <Button
                            android:id="@+id/btnPlayVMultimedia"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="230dp"
                            android:background="@drawable/play"
                            android:backgroundTint="@color/md_black_1000" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:src="@drawable/sound"
                            android:layout_marginTop="300dp"
                            android:layout_marginLeft="20dp"/>
                            <SeekBar
                                android:id="@+id/volumenVMultimedia"
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="300dp"
                                android:progress="50"

                                />
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="18dp"
                                android:src="@drawable/sound2"
                                android:layout_marginTop="300dp"
                               />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_teal_800"
                    android:layout_marginTop="425dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:id="@+id/btnAnadirVMultimedia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="275dp"
                    android:layout_marginTop="425dp"
                    android:background="@drawable/fab_add"
                    android:backgroundTint="@color/md_light_green_600"
                     />

                <Button
                    android:id="@+id/btnEliminarVMultimedia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="425dp"
                    android:enabled="false"
                    android:background="@android:drawable/ic_delete"
                    android:backgroundTint="@color/md_red_400" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* No se pueden superar los 5MB"
                    android:textStyle="italic"
                    android:layout_marginTop="440dp"
                    android:layout_marginLeft="15dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_teal_800"
                    android:layout_marginTop="470dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>