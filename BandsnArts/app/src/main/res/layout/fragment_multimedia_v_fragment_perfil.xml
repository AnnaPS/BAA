<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multimedia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/progressBarVMedia"
        android:layout_width="140dp"
        android:layout_height="154dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="190dp"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/svMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtReproductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:text="Muestra tu talento con tu mejor canción"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic" />


            <android.support.v7.widget.CardView
                android:id="@+id/cvReproductorFragmentMulti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/md_grey_300">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                        android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    app:cardBackgroundColor="@color/md_green_200">

                    <SeekBar
                        android:id="@+id/progresoMusicaVMultimedia"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:progressBackgroundTint="@color/md_red_400" />

                    <TextView
                        android:id="@+id/tiempoTranscurridoVMultimedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:text="00:00"
                        android:textColor="@color/md_white_1000" />

                    <TextView
                        android:id="@+id/tiempoRestanteVMultimedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="50dp"
                        android:text="00:00"
                        android:textColor="@color/md_white_1000" />


                    <Button
                        android:id="@+id/btnPlayVMultimedia"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/play"
                        android:backgroundTint="@color/md_black_1000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="120dp"
                            android:src="@drawable/sound" />

                        <SeekBar
                            android:id="@+id/volumenVMultimedia"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="120dp"
                            android:progress="50"

                            />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="120dp"
                            android:src="@drawable/sound2" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="190dp"

                    android:background="@color/md_teal_800" />

                <Button
                    android:id="@+id/btnAnadirVMultimedia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="275dp"
                    android:layout_marginTop="195dp"
                    android:background="@drawable/fab_add"
                    android:backgroundTint="@color/md_light_green_600" />

                <Button
                    android:id="@+id/btnEliminarVMultimedia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="195dp"
                    android:background="@android:drawable/ic_menu_delete"
                    android:backgroundTint="@color/md_red_400"
                    android:enabled="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="210dp"
                    android:text="* No se pueden superar los 5MB"
                    android:textStyle="italic|bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="245dp"
                    android:background="@color/md_teal_800" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txtRedSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¡Comparte tus redes sociales!"
                android:textSize="16sp"
                android:textStyle="italic" />


            <android.support.v7.widget.CardView
                android:id="@+id/cvRedesSocFragmentMulti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/md_grey_300">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/youtube" />

                    <EditText
                        android:id="@+id/edtYoutubeVMultimedia"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:enabled="false"
                        android:text="  PERFIL YOUTUBE"
                        android:textColor="@color/md_teal_800"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnEditarYoutubeVMultimedia"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_border_color_black_24dp"
                        android:backgroundTint="@color/md_teal_800" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/com_facebook_button_icon_blue" />


                    <EditText
                        android:id="@+id/edtFacebookVMultimedia"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:enabled="false"
                        android:text="  PERFIL FACEBOOK"
                        android:textColor="@color/md_teal_800"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnEditarFacebookVMultimedia"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/ic_border_color_black_24dp"
                        android:backgroundTint="@color/md_teal_800" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="110dp"
                        android:src="@drawable/instagram" />

                    <EditText
                        android:id="@+id/edtInstagramVMultimedia"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="110dp"
                        android:enabled="false"
                        android:text="  PERFIL INSTAGRAM"
                        android:textColor="@color/md_teal_800"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnEditarInstagramVMultimedia"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="110dp"
                        android:background="@drawable/ic_border_color_black_24dp"
                        android:backgroundTint="@color/md_teal_800"
                         />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>