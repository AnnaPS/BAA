<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MAIN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonegro"
    tools:context="com.example.pc.bandsnarts.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="63dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tituloVLogin"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_above="@+id/edtUsuarioVLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="BANDS N' ARTS"
            android:textColor="@color/md_white_1000"
            android:textSize="46dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtUsuarioVLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/borde"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="e-mail"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000" />

        <EditText
            android:id="@+id/edtPassVLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/borde"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Contrase単a"
            android:inputType="textPassword"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRecuperarVLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:fontFamily="casual"
                android:padding="10dp"
                android:text="多Olvisaste la contrase単a?"
                android:textColor="@color/md_white_1000"
                android:textSize="12dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chkRecordarVLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:buttonTint="@color/md_white_1000"
                android:fontFamily="casual"
                android:text="Recordar"
                android:textColor="@color/md_white_1000"
                android:textSize="12sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnIngresarVLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bordefondoverde"
            android:fontFamily="casual"
            android:onClick="onClickIngresarVLogin"
            android:text="INGRESAR"
            android:textColor="@color/md_white_1000"
            android:textSize="18dp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="20dp"
            android:background="@color/md_white_1000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">



            <com.facebook.login.widget.LoginButton
                android:id="@+id/btnFacebookVLogin"
                android:layout_width="65dp"
                android:layout_height="58dp"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/ic_launcherfacebook" />
            <Button
                android:id="@+id/sacarmenu"
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:text="Button"
                tools:text="menu"
                android:onClick="onclick"/>


            <Button
                android:id="@+id/btnGoogleVLogin"
                android:layout_width="72dp"
                android:layout_height="73dp"
                android:layout_marginLeft="100dp"
                android:background="@mipmap/ic_launchergoogle"
                android:onClick="onClickIngresoGoogle" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/md_white_1000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="520dp"
            android:text="多NECESITAS UNA CUENTA?"
            android:textColor="@color/md_white_1000" />

        <Button
            android:id="@+id/btnRegistrarVLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="520dp"
            android:background="@drawable/bordefondoverde"
            android:onClick="onClickRegistrarVLogin"
            android:text="REGISTRATE" />
    </LinearLayout>
</RelativeLayout>
