<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_lime_800"
    android:id="@+id/slider3"
    android:orientation="vertical"
    android:gravity="center"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="247dp"
        android:layout_height="260dp"
        android:background="@drawable/encontrarlocal"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="¿BUSCAS LOCAL DE ENSAYO O SALA PARA TOCAR?"
        android:textAlignment="center"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="TENEMOS UN AMPLIO CATÁLOGO PARA QUE TE PUEDAS INFORMAR"
        android:textAlignment="center"
        android:textColor="@color/md_black_1000"
        android:textSize="10sp"
        android:textStyle="bold"
        />
</LinearLayout>