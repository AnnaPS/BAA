<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubbleMensaje"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal"
    app:angle="10dp"
    app:arrowLocation="right"
    app:bubbleColor="#0a9783">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUsuarioMensajes"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUsuarioMensajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Mackauli Kulkin"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHoraMensajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:text="12:00"
                android:textColor="@color/md_black_1000"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtMensajeMensajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Solito en casa, me monto una fiesta no estÃ¡ la mama"
            android:textColor="@color/md_black_1000" />
    </LinearLayout>


</LinearLayout>